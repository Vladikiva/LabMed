<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_local_hospital_black_24dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/firasansbold"
        android:text="Благодарность"
        android:textAlignment="center"
        android:textColor="#00B712"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:text="Спасибо что используете наше приложение"
        android:fontFamily="@font/firasansbold"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textColor="#939396"
        android:textSize="20sp"
        android:gravity="center_horizontal" />
    <Button
        android:id="@+id/startButton"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="Начать"
        android:padding="8dp"
        android:fontFamily="@font/firasansbold"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        app:cornerRadius = "12dp"/>
</LinearLayout>