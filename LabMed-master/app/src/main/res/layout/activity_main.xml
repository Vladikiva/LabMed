<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    tools:context=".SignInClient">


    <TextView
        android:text="  Добро пожаловать!"
        android:layout_width="364sp"
        android:layout_height="42sp"
        android:textSize="28sp"
        android:drawableLeft="@drawable/hello"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/firasansbold"
        android:id="@+id/textView14"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="150dp" android:layout_marginEnd="100dp"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="55dp" android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@+id/textView15"/>
    <TextView
        android:text="Войдите, чтобы воспользоваться функциями приложения"
        android:layout_width="363sp"
        android:layout_height="44sp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:id="@+id/textView15"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/textView14"/>

    <EditText
        android:id="@+id/editText3"
        android:layout_width="299dp"
        android:layout_height="46dp"
        android:layout_margin="20dp"
        android:background="@drawable/rounded_edittext"
        android:drawableLeft="@drawable/ic_lock_outline"
        android:ems="10"
        android:hint="Проверка пароля"
        android:textColorHint="#9E9E9E"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/LoginBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="299dp"
        android:layout_height="46dp"
        android:layout_margin="20dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rounded_edittext"
        android:drawableLeft="@drawable/ic_person_outline"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textColorHint="#9E9E9E"
        app:layout_constraintBottom_toTopOf="@+id/editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="299dp"
        android:layout_height="46dp"
        android:layout_margin="20dp"
        android:background="@drawable/rounded_edittext"
        android:drawableLeft="@drawable/ic_lock_outline"
        android:ems="10"
        android:hint="Пароль"
        android:textColorHint="#9E9E9E"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/editText3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/SignUpBtn"
        android:layout_width="260dp"
        android:layout_height="46dp"
        android:layout_marginBottom="180dp"
        android:background="#3787FF"
        android:text="SIGN UP"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LoginBtn" />

    <Button
        android:id="@+id/LoginBtn"
        android:layout_width="260dp"
        android:layout_height="46dp"
        android:layout_marginBottom="180dp"
        android:background="#3787FF"
        android:text="ВОЙТИ"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/CreateAccount"
        android:layout_width="260dp"
        android:layout_height="46dp"
        android:layout_marginBottom="96dp"
        android:background="#3787FF"
        android:shadowRadius="@integer/google_play_services_version"
        android:text="Создать аккаунт"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="269dp"
        android:layout_height="45dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
